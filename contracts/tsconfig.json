{
    "compilerOptions": {
        "moduleResolution": "node",       // Use modern module resolution
        "resolveJsonModule": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "module": "esnext", // or "nodenext" or "preserve", as required
        "plugins": [
            {
              "name": "next"
            }
          ]
        },
        "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
        "exclude": ["node_modules"]
}